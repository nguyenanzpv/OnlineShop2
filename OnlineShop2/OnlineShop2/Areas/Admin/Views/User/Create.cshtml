@model Model.EF.User

@{
    ViewBag.Title = "Thêm người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Danh sách người dùng
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
